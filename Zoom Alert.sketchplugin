// Plugin: Zoom Alert (control z)
// Source: github.com/nathco/Zoom-Alert
// Author: Nathan Rutzky
// Update: 1.0

(function() {

    var doc = context.document;
    var val = doc.zoomValue();
    var pct = Math.round(val * 100) / 100;
    
    doc.showMessage(pct * 100 + '%');     
    coscript.setShouldKeepAround(true);
    var cosi = [coscript scheduleWithInterval:1 jsFunction:function(cinterval) {
    doc.hideMessage();     
    }];
    
})();